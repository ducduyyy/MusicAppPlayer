<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:fillViewport="true">>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearlayoutlib">
    <com.google.android.material.appbar.AppBarLayout
        android:background="@color/SkyBlue"
        android:id="@+id/appBarLayoutSearchThuVienMusic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textviewCuaToi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/appBarLayoutSearchThuVienMusic"
            android:padding="10dp"
            android:text="THƯ VIỆN CỦA TÔI"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:background="@color/SkyBlue"/>
    </com.google.android.material.appbar.AppBarLayout>
<!--    <androidx.recyclerview.widget.RecyclerView-->
<!--        android:id="@+id/recyclerViewSearchThuVienMusic"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:layout_below="@id/appBarLayoutSearchThuVienMusic"/>-->
        <fragment
            android:name="com.example.musicappplayer.fragment.SongHistoryFragment"
            android:id="@+id/fragmentsonghistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <fragment
            android:name="com.example.musicappplayer.fragment.FragmentFavoriteSongs"
            android:id="@+id/fragmentfavoritesong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <fragment
            android:name="com.example.musicappplayer.fragment.FragmentDownloadedMusic"
            android:id="@+id/fragmentdownloadedmusic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>

</ScrollView>