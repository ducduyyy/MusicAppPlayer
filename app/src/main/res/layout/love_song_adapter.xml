<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageviewbaihatyeuthich"
        android:layout_marginRight="3dp"
        android:scaleType="centerCrop"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textviewbaihatyeuthich"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginRight="40dp"
        android:text="Tên bài hát"
        android:textSize="16sp"
        android:layout_toRightOf="@+id/imageviewbaihatyeuthich"
        android:textColor="#B2000000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textviewcasibaihatyeuthich"
        android:layout_below="@+id/textviewbaihatyeuthich"
        android:layout_toRightOf="@+id/imageviewbaihatyeuthich"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:maxLines="1"
        android:text="Ca sĩ"
        android:textColor="#9e9797"
        android:textSize="14sp"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageviewluotthich"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_favorite"/>


</RelativeLayout>