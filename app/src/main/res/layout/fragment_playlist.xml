<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:textColor="@color/Black"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/textviewtitleplaylist"
        android:text="demo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ListView
        android:background="@drawable/custom_background_banner"
       android:layout_below="@id/textviewtitleplaylist"
        android:id="@+id/listviewplaylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Playlist"
        android:textSize="18sp"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/asld_playlist"
        android:paddingLeft="5dp"
        android:id="@+id/textviewmoreplaylist"
        android:layout_below="@id/listviewplaylist"
        android:background="@color/AliceBlue"
        android:layout_marginTop="8dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/Black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>